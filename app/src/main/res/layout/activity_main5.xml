<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/pamain12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siapa pemain basketball ini?"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="350dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_option_1"
        android:layout_width="match_parent"
        app:cornerRadius="4dp"
        android:layout_height="wrap_content"
        android:text="Michel Jordan"
        android:backgroundTint="#2196F3"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/img"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_option_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jayson Tatum"
        app:cornerRadius="4dp"
        android:backgroundTint="#2196F3"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_option_1"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_option_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giannis Antetokounmpo"
        android:layout_marginHorizontal="70dp"
        android:backgroundTint="#2196F3"
        app:cornerRadius="4dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_option_2"/>


</RelativeLayout>